$default-font-color= #2c3e50
$background-color = #fff
$second-background-color = #f0f0f0
$image-card-shadow-color = #ccc
$upload-area-focus-color = #2066bb
$upload-area-border-color = #999
$scrollbar-color = #dfdfdf
$image-list-border-color = #ddd


$component-interval = 16px
$box-border-radius = 6px
$content-max-width = 888px

html, body {
  position relative
  padding 0
  margin 0
  width 100%
  height 100%
  color $default-font-color
}


ul,
ol,
li {
  list-style none
}


* {
  &::-webkit-scrollbar {
    height 8px
    width 8px
  }

  &::-webkit-scrollbar-thumb {
    background $scrollbar-color
    border-radius 5px
  }

  &::-webkit-scrollbar-track {
    background transparent
  }
}


.flex-center {
  display flex
  justify-content center
  align-items center
}

.flex-start {
  display flex
  justify-content flex-start
  align-items center
}

.page-container {
  width 100%
  height 100%
  box-sizing border-box
  padding 30px
  background $background-color
  border-top-left-radius $box-border-radius
  border-top-right-radius $box-border-radius
  overflow-y auto
}
